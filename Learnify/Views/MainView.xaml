<Window x:Class="Learnify.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:viewModel="clr-namespace:Learnify.ViewModels"
        xmlns:local="clr-namespace:Learnify.Views"
        xmlns:userControls="clr-namespace:Learnify.Views.UserControls"
        mc:Ignorable="d"
        Height="720" Width="1280"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <userControls:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:CalendarViewModel}">
            <local:CalendarView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:PomodoroViewModel}">
            <local:PomodoroView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RankingViewModel}">
            <local:RankingView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:CampaignViewModel}">
            <local:CampaignView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:AnalystViewModel}">
            <userControls:AnalystView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RewardViewModel}">
            <userControls:RewardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
            <userControls:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:NotificationViewModel}">
            <userControls:NotificationPanel/>
        </DataTemplate>

        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border Background="#E0F3FF" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#5325c9" Offset="0"/>
                <GradientStop Color="#e538c1" Offset="0.5"/>
                <GradientStop Color="#5325c9" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.ColumnDefinitions>
                <!--menu-->
                <ColumnDefinition Width="150"/>
                <!--content-->
                <ColumnDefinition Width="*"/>
                <!--friend-->
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!--menu-->
            <Border Background="White" Grid.Column="0">
                <StackPanel>
                    <StackPanel Orientation="Vertical" Height="70" Margin="20">
                        <svg:SvgViewbox Source="/Images/Logo-DH-Cong-Nghe-Thong-Tin-UIT.svg"
                                        Height="70"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                    </StackPanel>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#8a94f8"
                                 IsChecked="True"
                                 Command="{Binding HomeCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Trang chủ" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#a057ff"
                                 Command="{Binding CalendarCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="CalendarAlt" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Lịch" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#e538c1"
                                 Command="{Binding PomodoroCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Clock" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Bấm giờ" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#00aeef"
                                 Command="{Binding RankingCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Medal" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Xếp hạng" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#7832df"
                                 Command="{Binding CampaignCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Bullhorn" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Chiến dịch" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#2ee8aa"
                                 Command="{Binding AnalystCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="ChartPie"  Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Thống kê" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#24bdbd"
                                 Command="{Binding RewardCommand}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Gem" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Phần thưởng" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="#221fcc"
                                 Command="{Binding SettingCommand}" Checked="RadioButton_Checked">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Gear" Style="{StaticResource menuButtonIcon}"/>
                            <TextBlock Text="Cài đặt" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>

            <!--content-->
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                        <!--content section-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">
                        <!-- Bạn có thể thêm các nút điều khiển cửa sổ ở đây -->
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <svg:SvgViewbox Source="/Images/Learnify.svg"
                                        Width="159"
                                        Height="40"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="20,0,0,0"/>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,20,0">
                            <Button Height="20" Width="20" Background="Transparent" Command="{Binding ToggleNotificationCommand}"
                                    Style="{StaticResource TransparentButtonStyle}"
                                    ToolTip="Thông báo">
                                <fa:IconImage Icon="Bell" Width="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--content section-->
                    <ContentControl Content="{Binding CurrentChildView}" Grid.Row="2"/>

                    <!-- Thanh thông báo -->
                    <Border Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,10,20,0"
                        MaxWidth="350"
                        Visibility="{Binding IsNotificationVisible, Converter={StaticResource BoolToVisibilityConverter}}">     
                        <ContentControl  Content="{Binding NotificationVM}"/>
                    </Border>
                </Grid>
            </Border>

            <!--friend-->
            <Border Background="White" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <!-- nút thu nhỏ cửa sổ -->
                        <Button x:Name="btnMinisize" Grid.Column="0" Click="btnMinisize_Click" Background="Transparent" BorderThickness="0">
                            <Image Source="/Images/ButtonMinisize.png"/>
                        </Button>

                        <!-- nút thoát -->
                        <Button x:Name="btnExit" Grid.Column="1" Click="btnExit_Click" Background="Transparent" BorderThickness="0">
                            <Image Source="/Images/ButtonClose.png"/>
                        </Button>
                    </Grid>                    <StackPanel Grid.Row="1">
                        <Grid Margin="5">
                            <TextBox x:Name="txtBoxSearch"
                                     Style="{StaticResource textBoxSeerch}"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Height="35"/>
                            <fa:IconImage Icon="Search"
                                          Height="15"
                                          HorizontalAlignment="Right"
                                          Margin="0 0 10 0"
                                          Foreground="#b0b9c6"/>
                        </Grid>

                        <!-- bạn bè -->
                        <ListBox ItemsSource="{Binding FriendsList}"
                                 SelectedItem="{Binding SelectedFriend, Mode=TwoWay}"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="10,2,10,2">
                                        <!-- Avatar -->
                                        <Ellipse Width="30" Height="30">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding Avatar}" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <!-- Tên bạn bè -->
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="20,0,0,0"
                                                   FontWeight="DemiBold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
