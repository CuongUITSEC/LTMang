<UserControl x:Class="Learnify.Views.UserControls.START"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Learnify.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>

                </Grid.RowDefinitions>
                <Image Source="/%E1%BA%A2NH%20B%C3%8CA.png" Height="400" Width="400" Margin="0 70 0 70 " HorizontalAlignment="Center"></Image>
                <Border Grid.Row="1" Height="101" Width="563" Margin="0 0 0 36 " CornerRadius="50" Background="#58cc02" HorizontalAlignment="Center">
                    <Button Style="{DynamicResource Button_bodered}" Command="{Binding DataContext.Sign_InCommand, RelativeSource={RelativeSource AncestorType=Window}}" Content="BẮT ĐẦU" FontSize="48"  FontWeight="Bold" Foreground="White" Background="Transparent" BorderThickness="0" />
                </Border>
                <Border Margin="0 0 0 50" Grid.Row="2" Height="101" Width="563"  CornerRadius="50" Background="White" BorderBrush="#a9a6ac" BorderThickness="2" HorizontalAlignment="Center" >
                    <Button Style="{DynamicResource Btn-bodered2}" Command="{Binding DataContext.Sign_UpCommand, RelativeSource={RelativeSource AncestorType=Window}}"  Content="TÔI ĐÃ CÓ TÀI KHOẢN" FontSize="48" FontWeight="Bold" Foreground="#1CB0F6" Background="Transparent" BorderThickness="0" />
                </Border>
            </Grid>
        </Viewbox>
    </Border>
</UserControl>
