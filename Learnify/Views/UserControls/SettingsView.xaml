<UserControl x:Class="Learnify.Views.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#E1F3FF">

    <Grid>
        <Border Background="#FFF8F8F8"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#DDD"
                BorderThickness="1"
                Width="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <!-- Avatar -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Ellipse Width="60" Height="60">

                    </Ellipse>


                </StackPanel>

                <!-- Info Rows -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tên người dùng" FontWeight="Bold" />
                    <TextBlock Text="Peter Pan" Grid.Column="1" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Đổi mật khẩu" FontWeight="Bold" />
                    <TextBlock Grid.Column="2" Text="❯" FontSize="16" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Email" FontWeight="Bold" />
                    <TextBlock Text="peter1990@gmail.com" Grid.Column="1" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Số điện thoại" FontWeight="Bold" />
                    <TextBlock Text="0991234589" Grid.Column="1" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Quốc gia" FontWeight="Bold" />
                    <TextBlock Text="Việt Nam" Grid.Column="1" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Về chúng tôi" FontWeight="Bold" />
                    <TextBlock Grid.Column="1" Text="❯" FontSize="16" />
                </Grid>

                <Separator/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Đăng xuất" FontWeight="Bold" />
                    <TextBlock Grid.Column="1" Text="❯" FontSize="16" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
