<UserControl x:Class="Learnify.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Learnify.ViewModels">
    <UserControl.DataContext>
        <vm:SettingsViewModel />
    </UserControl.DataContext>
    <UserControl.Background>
        <SolidColorBrush Color="{Binding SelectedBackgroundColor, Converter={StaticResource StringToColorConverter}}" />
    </UserControl.Background>
    <StackPanel Margin="30" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350">
        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Language Selection -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Language" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="120" SelectedItem="{Binding SelectedLanguage}">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Tiếng Việt"/>
            </ComboBox>
        </StackPanel>

        <!-- Color Mode Toggle -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Color Mode" VerticalAlignment="Center" Width="200"/>
            <ToggleButton Content="{Binding ColorModeText}" IsChecked="{Binding IsDarkMode}" Width="120" Height="30"/>
        </StackPanel>

        <!-- Notification Toggle -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Enable Notifications" VerticalAlignment="Center" Width="200"/>
            <ToggleButton IsChecked="{Binding NotificationsEnabled}" Width="60" Height="30"/>
        </StackPanel>

        <!-- Change Background Color -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="App Background Color" VerticalAlignment="Center" Width="200"/>
            <ComboBox Width="120" SelectedItem="{Binding SelectedBackgroundColor}">
                <ComboBoxItem Content="White"/>
                <ComboBoxItem Content="LightGray"/>
                <ComboBoxItem Content="LightBlue"/>
                <ComboBoxItem Content="LightGreen"/>
                <ComboBoxItem Content="LightYellow"/>
                <ComboBoxItem Content="LightCoral"/>
                <ComboBoxItem Content="Lavender"/>
                <ComboBoxItem Content="MistyRose"/>
                <ComboBoxItem Content="LightPink"/>
                <ComboBoxItem Content="LightSalmon"/>
            </ComboBox>
        </StackPanel>

        <!-- Sign Out Button -->
        <!--<Button Content="Sign Out" Command="{Binding SignOutCommand}" Style="{StaticResource BorderedButtonStyle}" Margin="0,20,0,0"/>-->
    </StackPanel>
</UserControl>
