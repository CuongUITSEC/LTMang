<UserControl x:Class="Learnify.Views.UserControls.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Learnify.Views.UserControls"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Left (Span 2 columns) -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Margin="15">
            <Viewbox Stretch="Uniform">
                <Border Height="200"
                       Width="430"
                       CornerRadius="25"
                       Background="White"
                       BorderThickness="1">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#5325c9" Offset="0"/>
                            <GradientStop Color="#e538c1" Offset="0.5"/>
                            <GradientStop Color="#5325c9" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel Background="LightPink">
                        <TextBlock Text="Main View Control" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="This is the main view control content."/>
                    </StackPanel>
                </Border>
            </Viewbox>
        </Border>

        <!-- Bottom Left -->
        <Border Grid.Row="1" Grid.Column="0" Margin="15">
            <Viewbox Stretch="Uniform">
                <Border Width="200" Height="200"
                       CornerRadius="25"
                       Background="White"
                       BorderThickness="1">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#5325c9" Offset="0"/>
                            <GradientStop Color="#e538c1" Offset="0.5"/>
                            <GradientStop Color="#5325c9" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel>
                        <TextBlock Text="Main View Control" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="This is the main view control content."/>
                    </StackPanel>
                </Border>
            </Viewbox>
        </Border>

        <!-- Bottom Middle -->
        <Border Grid.Row="1" Grid.Column="1" Margin="15">
            <Viewbox Stretch="Uniform">
                <Border Width="200" Height="200"
                       CornerRadius="25"
                       Background="White"
                       BorderThickness="1">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#5325c9" Offset="0"/>
                            <GradientStop Color="#e538c1" Offset="0.5"/>
                            <GradientStop Color="#5325c9" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel>
                        <TextBlock Text="Main View Control" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="This is the main view control content."/>
                    </StackPanel>
                </Border>
            </Viewbox>
        </Border>

        <!-- Right Side (Span 2 rows) -->
        <Border Grid.Column="2" Grid.RowSpan="2" Margin="15">
            <Viewbox Stretch="Uniform">
                <Border Width="200" Height="430"
                       CornerRadius="25"
                       Background="White"
                       BorderThickness="1">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#5325c9" Offset="0"/>
                            <GradientStop Color="#e538c1" Offset="0.5"/>
                            <GradientStop Color="#5325c9" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <StackPanel>
                        <TextBlock Text="Main View Control" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="This is the main view control content."/>
                    </StackPanel>
                </Border>
            </Viewbox>
        </Border>

    </Grid>
</UserControl>
