<UserControl x:Class="Learnify.Views.CalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:timetable="clr-namespace:Learnify.Views.UserControls"
             xmlns:local="clr-namespace:Learnify.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Border Margin="25,25,25,25">
        <Viewbox Stretch="Uniform">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!--bến trái-->
                    <!--lịch nhỏ-->
                    <Border Margin="0,0,5,5">
                        <Viewbox Stretch="Uniform">
                            <Border Width="320" Height="360"
                                    CornerRadius="25"
                                    Background="White"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                        <GradientStop Color="#e538c1" Offset="0.5"/>
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Viewbox Stretch="Uniform"
                                         Margin="10">
                                    <Calendar CalendarItemStyle="{DynamicResource CalendarCalendarItemStyle1}" CalendarDayButtonStyle="{DynamicResource CalendarCalendarDayButtonStyle1}" CalendarButtonStyle="{DynamicResource CalendarCalendarButtonStyle1}" Style="{DynamicResource CalendarStyle1}"
                                              DisplayDate="{x:Static sys:DateTime.Today}"/>
                                </Viewbox>
                            </Border>
                        </Viewbox>
                    </Border>

                    <!--thêm những việc cần làm-->
                    <Border Grid.Row="1"
                            Margin="0,5,5,0">
                        <Viewbox Stretch="Uniform">
                            <Border Width="320" Height="550"
                                    CornerRadius="25"
                                    Background="White"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                        <GradientStop Color="#e538c1" Offset="0.5"/>
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <DockPanel Margin="10">
                                    <!-- Tiêu đề -->
                                    <TextBlock Text="Việc cần làm"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Foreground="#5325c9"
                                               Margin="0,0,0,10"
                                               DockPanel.Dock="Top"/>

                                    <!-- Khu nhập liệu -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,0,0,10"
                                                DockPanel.Dock="Top">
                                        <TextBox x:Name="TaskInput"
                                                 Width="200"
                                                 Height="30"
                                                 Margin="0,0,10,0"
                                                 VerticalContentAlignment="Center"/>
                                        <Button Content="Thêm"
                                                Width="60"
                                                Click="AddTask_Click"/>
                                    </StackPanel>

                                    <!-- Danh sách công việc -->
                                    <ScrollViewer>
                                        <ItemsControl x:Name="TaskList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#f5f5f5"
                                                            CornerRadius="10"
                                                            Margin="0,5"
                                                            Padding="10">       
                                                        <TextBlock Text="{Binding}" />
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </DockPanel>

                            </Border>
                        </Viewbox>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <!--Lịch lớn-->
                    <Border Grid.Row="1"
                            Margin="5,0,0,0">
                        <Viewbox Stretch="Uniform">
                            <Border Width="990"
                                    Height="920"
                                    CornerRadius="25"
                                    Background="White"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                        <GradientStop Color="#e538c1" Offset="0.5"/>
                                        <GradientStop Color="#5325c9" Offset="0"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <DockPanel>
                                    <TextBlock Text="Thời khóa biểu tuần"
                                               FontWeight="Bold"
                                               FontSize="22"
                                               Foreground="#5325c9"
                                               Margin="20"
                                               DockPanel.Dock="Top" />
                                    <Viewbox Stretch="Uniform">
                                        <timetable:TableTime />
                                    </Viewbox>
                                </DockPanel>

                            </Border>
                        </Viewbox>
                    </Border>
                </Grid>
            </Grid>
        </Viewbox>
    </Border>
</UserControl>
